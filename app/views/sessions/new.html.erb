<div class="min-h-screen flex items-center justify-center bg-gray-100">
  <div class="w-full max-w-md bg-white p-8 rounded-xl shadow">
    <h1 class="text-2xl font-semibold text-center mb-6">
      Sign in
    </h1>

    <% if flash[:alert] %>
      <div class="mb-4 text-red-600 text-sm">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <%= form_with url: session_path, method: :post, class: "space-y-4" do |f| %>
      <div>
        <%= label_tag :email, "Email", class: "block text-sm font-medium" %>
        <%= email_field_tag :email, nil,
          class: "mt-1 w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
      </div>

      <div>
        <%= label_tag :password, "Password", class: "block text-sm font-medium" %>
        <%= password_field_tag :password, nil,
          class: "mt-1 w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
      </div>

      <div>
        <%= submit_tag "Sign in",
          class: "w-full py-2 px-4 rounded-md bg-indigo-600 text-white font-medium hover:bg-indigo-700" %>
      </div>
    <% end %>

    <p class="mt-4 text-center text-sm text-gray-600" style="margin-top: 1em;">
      Don't have an account? <%= link_to "Sign up", new_user_path, class: "text-indigo-600 hover:underline" %>
    </p>
  </div>
</div>
